<?xml version="1.0" encoding="UTF-8"?>
<xs:schema elementFormDefault="qualified" targetNamespace="https://github.com/erasmus-without-paper/ewp-specs-api-mobility-search/tree/master" xmlns="https://github.com/erasmus-without-paper/ewp-specs-api-mobility-search/tree/master" xmlns:mobility="https://github.com/erasmus-without-paper/ewp-specs-api-mobilities/tree/master" xmlns:xml="http://www.w3.org/XML/1998/namespace" xmlns:xs="http://www.w3.org/2001/XMLSchema">
